<h1>Editar Jogo</h1>

<form method="POST" action="/games/<%= game.id %>/edit">
  <label>Título</label><br />
  <input type="text" name="title" value="<%= game.title %>" required /><br /><br />

  <label>Descrição</label><br />
  <textarea name="description"><%= game.description %></textarea><br /><br />

  <label>Preço</label><br />
  <input type="number" step="0.01" name="price" value="<%= game.price %>" required /><br /><br />

  <label>Estoque</label><br />
  <input type="number" name="stock" value="<%= game.stock %>" /><br /><br />

  <label>Categoria</label><br />
  <select name="category_id">
    <% categories.forEach(category => { %>
      <option
        value="<%= category.id %>"
        <%= category.id === game.category_id ? "selected" : "" %>
      >
        <%= category.name %>
      </option>
    <% }) %>
  </select><br /><br />

  <button type="submit">Salvar</button>
</form>

<a href="/games/<%= game.id %>">Cancelar</a>